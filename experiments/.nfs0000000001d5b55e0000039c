#!/bin/bash
timestamp() {
  date +"%T"
}
datestamp() {
  date +"%D"
}

t=$(timestamp)
t="$(echo ${t} | tr ':' '-')"

d=$(datestamp)
d=$(echo ${d} | tr '/' '-')

start_time="$d-$t"

use_error=False #--use_error_prop

#data_path=../../../data/lorenz_series.pkl
#chaotic_ts_mat.pkl  chaotic_ts.pkl  lorenz_series_mat.pkl  lorenz_series.pkl  traffic_9sensors.pkl  ushcn_CA.pkl


hidden_size=32
learning_rate=1e-3
burn_in_steps=5 # just for naming purposes


for exp in climate traffic
do 
data_path=../../data/${exp}.npy
    for model in TLSTM MLSTM LSTM
    do
        for hidden_size in 8 32 128
        do
            save_path=../log/$exp/$start_time/$model/hz-$hidden_size/
            echo $save_path
            mkdir -p $save_path
            python train.py --data_path=$data_path --model=$model --save_path=$save_path --hidden_size=$hidden_size --learning_rate=$learning_rate --use_error_prop=$use_error  
        done
    done
done

cp $(pwd)/run_exps.sh ${save_path}run_exps.sh
